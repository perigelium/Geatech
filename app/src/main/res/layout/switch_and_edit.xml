<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="5dp"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llHeaderSwitchAndEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivArrowSwitchAndEdit"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="15dp"
            android:src="@drawable/report_green_down"/>

        <TextView
            android:id="@+id/tvHeaderSwitchAndEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="Section name"
            android:maxWidth="250dp"
            android:textSize="13sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSectionSwitchAndEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        ><!--android:visibility="gone">-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="9dp">

<!--            <TextView
                android:id="@+id/tv1SwitchAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_margin="9dp"
                android:text="Switch 1: "
                android:textSize="13sp"/>-->

            <Switch
                android:theme="@style/SwitchCompatTheme"
                android:id="@+id/sw1SwitchAndEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="switch"
                android:textColor="#ff808080"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/llEditSwitchAndEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="9dp">

            <TextView
                android:id="@+id/tv1SwitchAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_gravity="start|center_vertical"
                android:text="Edit 1: "
                android:textSize="13sp"
                android:textColor="#ff808080"/>

            <EditText
                android:id="@+id/et1SwitchAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="Inserire"
                android:textColorHint="#cccccc"
                android:background="@android:color/transparent"
                android:ems="9"
                android:inputType="none"
                android:text=""
                android:textColor="#ff29b352"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>