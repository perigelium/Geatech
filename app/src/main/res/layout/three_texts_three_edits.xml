<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llSectionThreeTextThreeEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1ThreeTextThreeEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:text="2."
            android:textColor="#555555"/>

        <EditText
            android:id="@+id/et1ThreeTextThreeEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="6dp"
            android:background="#ffffff"
            android:inputType="textLongMessage"
            android:ems="15"
            android:text=""/>

        <TextView
            android:id="@+id/tv2ThreeTextThreeEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:text="2.2"
            android:textColor="#555555"/>

        <EditText
            android:id="@+id/et2ThreeTextThreeEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="6dp"
            android:background="#ffffff"
            android:inputType="textLongMessage"
            android:ems="15"
            android:text=""/>

        <TextView
            android:id="@+id/tv3ThreeTextThreeEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:text="2.2"
            android:textColor="#555555"/>

        <EditText
            android:id="@+id/et3ThreeTextThreeEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="6dp"
            android:background="#ffffff"
            android:inputType="textLongMessage"
            android:ems="15"
            android:text=""/>

    </LinearLayout>

</LinearLayout>