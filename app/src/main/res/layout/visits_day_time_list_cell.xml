<?xml version="1.0" encoding="utf-8"?>
<ListView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/listSottprodottiSDT">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSottprodottiDateTime"
            android:layout_width="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp"
            android:src="@drawable/sottoprodotti_orange"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSottprodottiDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eventualli sottoprodotti"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvProdottoSDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prodotto:"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/tvProdottoDataSDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prodotto data"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTipoSDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo:"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/tvTipoDataSDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo data"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvN.PezzoSDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.Pezzo:"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/tvN.PezzoDataSDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.Pezzo data"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp" />
    </LinearLayout>
</ListView>