<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#fff5f5f5"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/shape_round_corners_list_item"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivReportStatus"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/detailsRows"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvClientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginLeft="0dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxWidth="230dp"
                    android:text="Nome del cliente"
                    android:textColor="#ff000000"
                    android:textSize="17sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">

                    <TextView
                        android:id="@+id/tvVisitDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DD"
                        android:textColor="#ff000000"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/tvVisitMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="MM"
                        android:textColor="#ff000000"
                        android:textSize="17sp"/>

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvClientAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxWidth="220dp"
                    android:text="Client indirizzo"
                    android:textColor="#ff333333"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvVisitTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:text="MM:SS"
                    android:textColor="#ff333333"
                    android:textSize="12sp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTechName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:lines="1"
                    android:text="Nome del tecnico"
                    android:textColor="#ff666666"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=" â€¢ "
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvVisitTOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Tipo di servicio"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvReportStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Stato rapporto"
                android:visibility="gone"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>