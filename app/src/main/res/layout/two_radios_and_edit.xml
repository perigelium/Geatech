<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="25dp"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="top"
        android:background="#ff808080"/>

    <LinearLayout
        android:id="@+id/llHeaderTwoRadiosAndEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivArrowTwoRadiosAndEdit"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="15dp"
            android:src="@drawable/report_green_down"/>

        <TextView
            android:id="@+id/tvHeaderTwoRadiosAndEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="Section name"
            android:maxWidth="250dp"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"/>

    </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/llSectionTwoRadiosAndEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg1TwoRadiosAndEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rb1TwoRadiosAndEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/radiobutton_ripple_effect_selector"
                android:drawableRight="@drawable/radio_button_selector"
                  android:textColor="@drawable/radio_button_text_color_selector"
                android:text="radio "/>

            <RadioButton
                android:id="@+id/rb2TwoRadiosAndEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/radiobutton_ripple_effect_selector"
                android:drawableRight="@drawable/radio_button_selector"
                  android:textColor="@drawable/radio_button_text_color_selector"
                android:text="radio 2"/>

        </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="Altro: "
                android:textSize="13sp"/>

            <EditText
                android:id="@+id/et1TwoRadiosAndEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="Inserire"
                android:textColorHint="@color/colorLightGrayB2"
                android:background="@android:color/transparent"
                android:ems="9"
                android:inputType="none"
                android:text=""
                android:textColor="#ff29b352"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>