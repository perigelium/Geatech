<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#fff5f5f5"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/shape_round_corners_list_item"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/detailsRows"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvClientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginLeft="0dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxWidth="230dp"
                    android:text="Nome del cliente"
                    android:textColor="#ff000000"
                    android:textSize="17sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">

                    <TextView
                        android:id="@+id/tvVisitDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DD"
                        android:textColor="#ff000000"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/tvVisitMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="MM"
                        android:textColor="#ff000000"
                        android:textSize="17sp"/>

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvClientPhones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Mobile • fisso"
                    android:textColor="#ff333333"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvVisitTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:text="MM:SS"
                    android:textColor="#ff333333"
                    android:textSize="12sp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvClientAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:maxWidth="230dp"
                    android:text="Client indirizzo"
                    android:textColor="#ff333333"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=" • "
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvTypeOfService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Tipo di servicio"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>