<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zubcu.geatech.Fragments.DateTimeSetFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivPersonDateTime"
                android:layout_width="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="6dp"
                android:src="@drawable/person_green"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvPersonDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome del cliente"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="6dp"/>

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivAddressDateTime"
                android:layout_width="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/location_dark_green"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"/>

            <TextView
                android:id="@+id/tvAddressDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client indirizzo"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="6dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnApriMapaDateTime"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_height="wrap_content"
                android:background="#00ff00"
                android:text="Apri mappa"/>

        </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp">

        <ImageView
            android:id="@+id/ivPhoneDateTime"
            android:layout_width="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/phone_green"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/tvPhoneDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client phone"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp"/>
        </LinearLayout>

            <Button
                android:id="@+id/btnChiamaDateTime"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_height="wrap_content"
                android:text="Chiama"
                android:background="#00ff00"
                android:src="@drawable/arrow_right" />
    </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="start|center_vertical"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/ivServiceDateTime"
                android:layout_width="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/service_green"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp" />

            <TextView
                android:id="@+id/tvServiceDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome di servizio"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="6dp"/>

        </LinearLayout>

    <View android:layout_height="1px" android:layout_gravity="bottom" android:layout_marginLeft="40dp" android:layout_width="match_parent" android:background="#000000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSottprodottiDateTime"
            android:layout_width="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp"
            android:src="@drawable/stack_green"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSottprodottiDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eventualli sottoprodotti"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout="@layout/visits_day_time_set_list_row"
        android:layout_width="match_parent"
        android:layout_height="88dp" > <!--hardcoded needs to be replaced-->
    </ListView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginLeft="6dp"
                    android:text="Data:" />

                <TextView
                    android:id="@+id/tvDateSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginLeft="6dp"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginLeft="6dp"
                    android:text="Ora:" />

                <TextView
                    android:id="@+id/tvTimeSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginLeft="6dp"
                    android:text="" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSetDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:onClick="onClick"
                android:text="Cambia" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSetDateTimeSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:background="#00ff33"
            android:onClick="onClick"
            android:text="Fisso il sopraluogho" />

        <Button
            android:id="@+id/btnAnnullaSetDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:onClick="onClick"
            android:text="Annulla" />
    </FrameLayout>

</LinearLayout>

</FrameLayout>
