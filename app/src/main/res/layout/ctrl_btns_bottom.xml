<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ctrlBtnsBottom"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:background="#29b352"
    android:weightSum="5"
    tools:context="ru.alexangan.developer.geatech.Fragments.CtrlBtnsBottom">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnVisits"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bottom_line_lists_selector"
            android:button="@null"
            android:onClick="onClick"
            android:textOff=""
            android:textOn=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnInWorkVisits"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bottom_line_edit_selector"
            android:button="@null"
            android:onClick="onClick"
            android:textOff=""
            android:textOn=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnNotifications"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bottom_line_bell_selector"
            android:button="@null"
            android:onClick="onClick"
            android:textOff=""
            android:textOn=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnCompletedReports"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bottom_line_sent_selector"
            android:button="@null"
            android:onClick="onClick"
            android:textOff=""
            android:textOn=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnAppSettings"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bottom_line_settings_selector"
            android:button="@null"
            android:onClick="onClick"
            android:textOff=""
            android:textOn=""/>
    </LinearLayout>

</LinearLayout>
