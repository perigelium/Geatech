<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="5dp"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="top"
        android:background="#ff808080"/>

    <LinearLayout
        android:id="@+id/llHeaderChkboxAndEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivArrowChkboxAndEdit"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="15dp"
            android:src="@drawable/report_green_down"/>

        <TextView
            android:id="@+id/tvHeaderChkboxAndEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:maxWidth="250dp"
            android:text="Section name"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"/>

    </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/llSectionChkboxAndEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"><!--android:visibility="gone">-->

        <FrameLayout
            android:id="@+id/fl1ChkboxAndEdit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:background="@drawable/layout_on_press_color_selector"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/tv1ChkboxAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical|start"
                android:text="chkbox 1"/>

            <CheckBox
                android:id="@+id/chk1ChkboxAndEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="false"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="25dp"
                android:background="@drawable/checkbox_selector"
                android:button="@null"
                android:text=""/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvEditChkboxAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_margin="9dp"
                android:text="Altro: "
                android:textSize="13sp"/>

            <EditText
                android:id="@+id/et1ChkboxAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:color/transparent"
                android:ems="9"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Inserire"
                android:inputType="none"
                android:text=""
                android:textColor="#ff29b352"
                android:textColorHint="#cccccc"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>