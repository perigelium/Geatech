<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="25dp"
              android:background="#ffffffff"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="top"
        android:background="#ff808080"/>

    <LinearLayout
        android:id="@+id/llHeaderThreeRadios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivArrowThreeRadios"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="15dp"
            android:src="@drawable/report_green_down"/>

        <TextView
            android:id="@+id/tvHeaderThreeRadios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="Section name"
            android:maxWidth="250dp"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"/>

    </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/llSectionThreeRadios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp">


        <RadioGroup
            android:id="@+id/rg1ThreeRadios"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rb1ThreeRadios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/radiobutton_ripple_effect_selector"                
                android:drawableRight="@drawable/radio_button_selector"
                  android:textColor="@drawable/radio_button_text_color_selector"
                android:text="radio "/>

            <RadioButton
                android:id="@+id/rb2ThreeRadios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/radiobutton_ripple_effect_selector"                
                android:drawableRight="@drawable/radio_button_selector"
                  android:textColor="@drawable/radio_button_text_color_selector"
                android:text="radio 2"/>

            <RadioButton
                android:id="@+id/rb3ThreeRadios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/radiobutton_ripple_effect_selector"                
                android:drawableRight="@drawable/radio_button_selector"
                  android:textColor="@drawable/radio_button_text_color_selector"
                android:text="radio 3   "/>

        </RadioGroup>

    </LinearLayout>

</LinearLayout>