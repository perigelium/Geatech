<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="5dp"
              android:background="#ffffffff"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="top"
        android:background="#ff808080"/>

    <LinearLayout
        android:id="@+id/llHeaderTwoSwitches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivArrowTwoSwitches"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="15dp"
            android:src="@drawable/report_green_down"/>

        <TextView
            android:id="@+id/tvHeaderTwoSwitches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="Section name"
            android:maxWidth="250dp"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"/>

    </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/llSectionTwoSwitches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        ><!--android:visibility="gone">-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="9dp">

            <TextView
                android:id="@+id/tv1TwoSwitches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_gravity="start|center_vertical"
                android:text="Switch 1: "
                android:textSize="13sp"
                android:textColor="#ff808080"/>

            <Switch
                android:id="@+id/sw1TwoSwitches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="16dp"
                android:theme="@style/SwitchCompatTheme"
                android:textColor="#ff808080"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="9dp">

            <TextView
                android:id="@+id/tv2TwoSwitches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="16dp"
                android:text="Switch 2: "
                android:textSize="13sp"
                android:textColor="#ff808080"/>

            <Switch
                android:id="@+id/sw2TwoSwitches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="16dp"
                android:theme="@style/SwitchCompatTheme"
                android:textColor="#ff808080"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>