<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zubcu.geatech.Fragments.DateTimeSetFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivPersonDateTime"
                android:layout_width="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="6dp"
                android:src="@drawable/person_green"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvPersonDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome del cliente"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="6dp"/>

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivAddressDateTime"
                android:layout_width="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/location_green"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"/>

            <TextView
                android:id="@+id/tvAddressDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client indirizzo"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="6dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnApriMapaDateTime"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_height="wrap_content"
                android:background="#00ff00"
                android:text="Apri mappa"/>

        </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp">

        <ImageView
            android:id="@+id/ivPhoneDateTime"
            android:layout_width="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/phone_green"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/tvPhoneDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client phone"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp"/>
        </LinearLayout>

            <Button
                android:id="@+id/btnChiamaDateTime"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_height="wrap_content"
                android:text="Chiama"
                android:background="#00ff00"
                android:src="@drawable/arrow_right" />
    </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="start|center_vertical"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/ivServiceDateTime"
                android:layout_width="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/service_green"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp" />

            <TextView
                android:id="@+id/tvServiceDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome di servizio"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="6dp"/>

        </LinearLayout>

    <View android:layout_height="1px" android:layout_gravity="bottom" android:layout_marginLeft="40dp" android:layout_width="match_parent" android:background="#000000"/>

    <com.example.zubcu.geatech.Lists.ListSottoprodotti
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal" >
        <TextView
            android:id="@+id/tvDataDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data:"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp"/>
        <Spinner
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinDay" />
        <Spinner
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinMonth" />
        <Spinner
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinYear" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal" >
        <TextView
            android:id="@+id/tvOraDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ora:"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp"/>
            <Spinner
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinHour" />
            <Spinner
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinMinute" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="6dp">
        <Button
            android:id="@+id/btnFissoIlSopraluoghoDateTime"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:layout_height="wrap_content"
            android:background="#00ff33"
            android:text="Fisso il sopraluogho"/>
        <Button
            android:id="@+id/btnAnnullaDateTime"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_height="wrap_content"
            android:text="Annulla"/>
    </FrameLayout>

</LinearLayout>

</FrameLayout>
