<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="25dp"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="top"
        android:background="#ff808080"/>

    <LinearLayout
        android:id="@+id/llHeaderFiveRadios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivArrowFiveRadios"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="15dp"
            android:src="@drawable/report_green_down"/>

        <TextView
            android:id="@+id/tvHeaderFiveRadios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:maxWidth="250dp"
            android:text="Section name"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"/>

    </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/llSectionFiveRadios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="16dp">

        <RadioGroup
            android:id="@+id/rg1FiveRadios"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rb1FiveRadios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@drawable/radio_button_selector"
                android:text="Radio "
                android:textColor="@drawable/radio_button_text_color_selector"/>

            <RadioButton
                android:id="@+id/rb2FiveRadios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@drawable/radio_button_selector"
                android:text="Radio 2"
                android:textColor="@drawable/radio_button_text_color_selector"/>

            <RadioButton
                android:id="@+id/rb3FiveRadios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@drawable/radio_button_selector"
                android:text="Radio 3"
                android:textColor="@drawable/radio_button_text_color_selector"/>

            <RadioButton
                android:id="@+id/rb4FiveRadios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@drawable/radio_button_selector"
                android:text="Radio 4   "
                android:textColor="@drawable/radio_button_text_color_selector"/>

            <RadioButton
                android:id="@+id/rb5FiveRadios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@drawable/radio_button_selector"
                android:text="Radio 5   "
                android:textColor="@drawable/radio_button_text_color_selector"/>

        </RadioGroup>

    </LinearLayout>

</LinearLayout>