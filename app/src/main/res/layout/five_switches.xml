<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="5dp"
              android:background="#ffffffff"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llSectionFiveSwitches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="15dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="9dp">

            <TextView
                android:id="@+id/tv1FiveSwitches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxWidth="255dp"
                android:text="Switch 1: "
                android:minLines="2"
                android:textSize="13sp"
                android:textColor="#ff808080"/>

            <Switch
                android:theme="@style/SwitchCompatTheme"
                android:id="@+id/sw1FiveSwitches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="7dp"
                android:textColor="#ff808080"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="9dp">

            <TextView
                android:id="@+id/tv2FiveSwitches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxWidth="255dp"
                android:minLines="2"
                android:text="Switch 2: "
                android:textSize="13sp"
                android:textColor="#ff808080"/>

            <Switch
                android:theme="@style/SwitchCompatTheme"
                android:id="@+id/sw2FiveSwitches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="7dp"
                android:textColor="#ff808080"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="9dp">

            <TextView
                android:id="@+id/tv3FiveSwitches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxWidth="255dp"
                android:minLines="2"
                android:text="Switch 3: "
                android:textSize="13sp"
                android:textColor="#ff808080"/>

            <Switch
                android:theme="@style/SwitchCompatTheme"
                android:id="@+id/sw3FiveSwitches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="7dp"
                android:textColor="#ff808080"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="9dp">

            <TextView
                android:id="@+id/tv4FiveSwitches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxWidth="255dp"
                android:minLines="2"
                android:text="Switch 4: "
                android:textSize="13sp"
                android:textColor="#ff808080"/>

            <Switch
                android:theme="@style/SwitchCompatTheme"
                android:id="@+id/sw4FiveSwitches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="7dp"
                android:textColor="#ff808080"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="9dp">

            <TextView
                android:id="@+id/tv5FiveSwitches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxWidth="255dp"
                android:minLines="2"
                android:text="Switch 5: "
                android:textSize="13sp"
                android:textColor="#ff808080"/>

            <Switch
                android:theme="@style/SwitchCompatTheme"
                android:id="@+id/sw5FiveSwitches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="7dp"
                android:textColor="#ff808080"/>

        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llHeaderFiveSwitches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:clickable="true"
        android:visibility="gone"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp">

            <TextView
                android:id="@+id/tvHeaderFiveSwitches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text=" Section name"
                android:maxWidth="250dp"
                android:textSize="13sp"/>

            <ImageView
                android:id="@+id/ivArrowFiveSwitches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="30dp"
                android:src="@drawable/report_green_down"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>