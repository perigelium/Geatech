<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ctrlBtnsFragment2"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="center"
    android:background="#9e9e9e"
    android:orientation="horizontal"
    tools:context="com.example.zubcu.geatech.Fragments.CtrlBtnsFragment2">

    <RadioGroup
        android:id="@+id/toggleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btnReturn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/toggle_btn_1selector"
                android:button="@null"
                android:textOff=""
                android:textOn=""/>

            <RadioButton
                android:id="@+id/btnInfo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/toggle_btn_2selector"
                android:button="@null"
                android:textOff=""
                android:textOn=""/>

            <RadioButton
                android:id="@+id/btnFillReport"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/toggle_btn_3selector"
                android:button="@null"
                android:textOff=""
                android:textOn=""/>

            <RadioButton
                android:id="@+id/btnAddPhotos"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/toggle_btn_4selector"
                android:button="@null"
                android:textOff=""
                android:textOn=""/>

            <RadioButton
                android:id="@+id/btnGreenCloud"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/toggle_btn_5selector"
                android:button="@null"
                android:textOff=""
                android:textOn=""/>

    </RadioGroup>

</FrameLayout>
