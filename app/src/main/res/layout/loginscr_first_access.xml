<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/primo_accesso">

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:id="@+id/txtRecupera"
        >

        <TextView
            android:text="PRIMO ACCESSO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView4"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:id="@+id/textView6" />
    </RelativeLayout>

    <RelativeLayout
        android:background="#ffff"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_width="260dp"
        android:layout_below="@+id/txtRecupera"
        android:layout_alignLeft="@+id/txtRecupera"
        android:layout_alignStart="@+id/txtRecupera"
        android:id="@+id/Email">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="Email"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/layer_61"
            android:id="@+id/imageView8"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnInviaPassword"
        android:text="INVIA CREDENZIALI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/holo_green_dark"
        android:minHeight="60dp"
        android:minWidth="220dp"
        style="@android:style/Widget.Button"
        android:textSize="18sp"/>

</RelativeLayout>