<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="25dp"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="top"
            android:background="#ff808080"/>

        <LinearLayout
            android:id="@+id/llHeaderTwoSwitchesAndEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivArrowTwoSwitchesAndEdit"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical|end"
                android:layout_margin="15dp"
                android:src="@drawable/report_green_down"/>

            <TextView
                android:id="@+id/tvHeaderTwoSwitchesAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxWidth="250dp"
                android:text="Section name"
                android:textColor="#ff000000"
                android:textSize="17sp"/>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/llSectionTwoSwitchesAndEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1TwoSwitchesAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="Switch 1: "
                android:textColor="#ff808080"
                android:textSize="13sp"/>

            <Switch
                android:id="@+id/sw1TwoSwitchesAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:textColor="#ff808080"
                android:theme="@style/SwitchCompatTheme"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv2TwoSwitchesAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="Switch 2: "
                android:textColor="#ff808080"
                android:textSize="13sp"/>

            <Switch
                android:id="@+id/sw2TwoSwitchesAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:textColor="#ff808080"
                android:theme="@style/SwitchCompatTheme"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/llEditTwoSwitchesAndEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv3TwoSwitchesAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="Edit 1: "
                android:maxWidth="150dp"
                android:textColor="#ff808080"
                android:textSize="13sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@drawable/shape_gray_border_rect">

                <EditText
                    android:id="@+id/et1TwoSwitchesAndEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginLeft="6dp"
                    android:background="@android:color/transparent"
                    android:hint="Inserire"
                    android:text=""
                    android:textColor="#ff29b352"
                    android:textColorHint="#cccccc"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>