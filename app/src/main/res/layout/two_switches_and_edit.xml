<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="5dp"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llHeaderTwoSwitchesAndEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:clickable="true"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHeaderTwoSwitchesAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:layout_gravity="start|center_vertical"
                android:text=" Section name"
                android:maxWidth="250dp"

                android:textSize="13sp"/>

            <ImageView
                android:id="@+id/ivArrowTwoSwitchesAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="25dp"
                android:src="@drawable/report_green_down"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSectionTwoSwitchesAndEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        ><!--android:visibility="gone">-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="9dp">

            <TextView
                android:id="@+id/tv1TwoSwitchesAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="Switch 1: "
                android:textSize="13sp"
                android:textColor="#000000"/>

            <Switch
                android:id="@+id/sw1TwoSwitchesAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="16dp"
                android:textColor="#000000"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="9dp">

            <TextView
                android:id="@+id/tv2TwoSwitchesAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="Switch 2: "
                android:textSize="13sp"
                android:textColor="#000000"/>

            <Switch
                android:id="@+id/sw2TwoSwitchesAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="16dp"
                android:textColor="#000000"/>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/llEditTwoSwitchesAndEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="9dp">

            <TextView
                android:id="@+id/tv3TwoSwitchesAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="Edit 1: "
                android:textColor="#000000"
                android:textSize="13sp"/>

            <EditText
                android:id="@+id/et1TwoSwitchesAndEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="Inserire"
                android:textColorHint="#cccccc"
                android:background="@android:color/transparent"
                android:ems="9"
                android:inputType="none"
                android:text=""
                android:textColor="#000000"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>