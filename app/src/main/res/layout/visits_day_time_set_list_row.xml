<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/listSottprodottiSDT">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prodotto:"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/tvProdottoDataSDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prodotto data"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo:"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/tvTipoDataSDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo data"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.Pezzo:"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp" />

        <TextView
            android:id="@+id/tvN.PezzoDataSDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N.Pezzo data"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="6dp" />
    </LinearLayout>
</LinearLayout>