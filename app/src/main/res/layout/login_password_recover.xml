<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#29b352">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="240dp"
            android:layout_height="140dp"
            android:layout_gravity="left"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="45dp"
            android:src="@drawable/login_logo"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="9dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAIL"
                android:textColor="#ffffff"/>

            <EditText
                android:id="@+id/etMailPasswordRecover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="inserire e-mail"
                android:background="@android:color/transparent"
                android:inputType="textEmailAddress"
                android:textColor="#ffffff"
                android:textColorHint="#cccccc"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="9dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom">

        <Button
            android:id="@+id/btnInviaPassword"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:text="INVIA PASSWORD"
            android:textColor="#29b352"
            android:paddingRight="99dip"
            android:drawableRight="@drawable/login_accedi_20px"
            android:background="@drawable/button_border_white"
            android:textSize="19sp"/>

        </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
